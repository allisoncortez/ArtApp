  
  <%= render partial: "layouts/errors", locals: {object: @art_work} %>

  <div class="form-row">
    <div class="card-body">
      <%= form_for(@art_work) do |f| %>

        <%= f.hidden_field :challenge_id %>
              
        <% if !@art_work.image %>
          <div class="col-nd-4 offset-nd-4">
            <%= f.label :image %><br>
            <%= f.file_field :image %>
          </div>
        <% end %>
          
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_field :description %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Submit", class: 'btn btn-primary'%>
        </div>
        <br>

        <!-- <% if @art_work.image %>
          <div class="actions">
            <%= button_to 'delete', @art_work, :method => :delete %>
          </div>
        <% end %> -->
          
      <% end %>
    </div>
  </div>

